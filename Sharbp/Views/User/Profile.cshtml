@model dynamic

<body class="custom"  style="margin-bottom: 200px">
	<div class="row py-5 px-4">
		<div class="col-md-10 mx-auto">
			<div class="bg-white shadow rounded overflow-hidden">
				<div class="px-4 pt-0 pb-4 cover">
					<div class="media align-items-end profile-head">
						<div class="profile mr-3"><img src="/images/profilePicture.svg" alt="..." width="130" class="rounded-circle mb-2 img-thumbnail"></div>
						<div class="media-body mb-5 normal-text">
							<h3 class="mt-0 mb-1"><span style="background-color: white; padding: 5px;">@Model.User.FirstName @Model.User.LastName</span></h3>
						</div>
					</div>
				</div>
				<div class="px-4 py-5" style="margin-top: 20px;">
					<h5 class="mb-2" style="margin-left: 35px;">Информация</h5>
						<div class="container">
							<div class="p-4 my-2 rounded shadow-sm bg-light">
								<p class="normal-text mb-0">Потребителско име: @Model.User.Username</p>
								@if (Logged.User is not null)
								{
									@if (Logged.User.Username == Model.User.Username)
									{
										<a asp-controller="User" asp-action="SigningOut">
											<svg xmlns="http://www.w3.org/2000/svg" style="margin-top: -20px;" width="16" height="16" fill="#006A7A" class="bi bi-door-open-fill float-right" viewBox="0 0 16 16">
												<path d="M1.5 15a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2.5A1.5 1.5 0 0 0 11.5 1H11V.5a.5.5 0 0 0-.57-.495l-7 1A.5.5 0 0 0 3 1.5V15H1.5zM11 2h.5a.5.5 0 0 1 .5.5V15h-1V2zm-2.5 8c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z" />
											</svg>
										</a>
									}
								}
							</div>
					</div>
					<br />
					<br />
					<div class="px-4 pb-5">
						<div class="d-flex align-items-center justify-content-between mb-3">
							<h5 class="mb-0" style="text-indent: 10px;">Постове</h5>
						</div>
						@if (Model.UserPosts is not null)
						{
							@foreach (Models.Post post in Model.UserPosts)
							{
								<div class="p-4 my-2 rounded shadow-sm bg-light">
									<a class="  mb-0 recent-link custom-text" asp-controller="Post" asp-action="Open" asp-route-id="@post.Id">@post.Title</a>
									@if (Logged.User is not null)
									{
										@if (Logged.User.Username == Model.User.Username || Logged.User.Username == "Admin")
										{
											<a asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id">
												<svg xmlns="http://www.w3.org/2000/svg" fill="#006A7A" class="bi bi-backspace-fill float-right edit-delete" viewBox="0 0 16 16">
													<path d="M15.683 3a2 2 0 0 0-2-2h-7.08a2 2 0 0 0-1.519.698L.241 7.35a1 1 0 0 0 0 1.302l4.843 5.65A2 2 0 0 0 6.603 15h7.08a2 2 0 0 0 2-2V3zM5.829 5.854a.5.5 0 1 1 .707-.708l2.147 2.147 2.146-2.147a.5.5 0 1 1 .707.708L9.39 8l2.146 2.146a.5.5 0 0 1-.707.708L8.683 8.707l-2.147 2.147a.5.5 0 0 1-.707-.708L7.976 8 5.829 5.854z" />
												</svg>
											</a>
											<a asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id">
												<svg xmlns="http://www.w3.org/2000/svg" fill="#006A7A" class="bi bi-pen-fill edit-delete float-right" viewBox="0 0 16 16">
													<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z" />
												</svg>
											</a>
										}
									}
								</div>
							}
						}
						else
						{
							<div class="p-4 my-2 rounded shadow-sm bg-light">
								<p class="normal-text">Потребителят не e споделил практики още</p>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
</body>