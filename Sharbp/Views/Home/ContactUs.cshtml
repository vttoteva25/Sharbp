@model Sharbp.ViewModel.SendMessageViewModel

@{ ViewData["Title"] = "Контакти"; }

<div class="container" style="font-family: Bahnschrift; color: #006A7A; margin-bottom: 100px">
	<div class="row">
		<div class="col-md-12">
			<h2 class="normal-heading" style="padding-top: 50px; padding-bottom: 20px">Свържи се с нас</h2>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<h4 class="normal-heading" style="margin-left: 15px; padding-bottom: 10px">
				Директно съобщение до администратора
			</h4>
			<div>
				<div class="col-md-12">
					<form asp-action="ContactUs" asp-controller="Home" method="post" enctype="multipart/form-data">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label class="control-label">Заглавие</label>
							<input asp-for="Title" class="form-control" placeholder="Въведи заглавие..." />
							<span asp-validation-for="Title" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="control-label">Съдържание</label>
							<textarea asp-for="Content" class="form-control" placeholder="Въведете съдържанието..." /></textarea>
							<span asp-validation-for="Content" class="text-danger"></span>
						</div>
						<hr />
						<div class="form-group">
							<label class="control-label">Имейл</label>
							<input asp-for="Email" class="form-control" placeholder="Въведете имейл за връзка..." />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input type="submit" style="background-color: #006A7A; color: #FFCC48" value="Изпрати" class="btn btn-darkinfo btn-block" />
						</div>
					</form>
				</div>
			</div>
		</div>
		<div class="col">
			<h4 class="normal-heading" style="margin-left: 15px; padding-bottom: 10px">
				Свържете се с екипа
			</h4>
			<div style="margin-left: 15px">
				<h5 class="py-2">
					Милица Мартева - militsa.marteva@ruo.mon.bg
				</h5>
				<h5 class="py-2">
					Бойка Сребчева - srebcheva@pmgkk.com
				</h5>
			</div>
		</div>
	</div>
</div>